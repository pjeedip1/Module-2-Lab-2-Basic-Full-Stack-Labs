<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags and title -->
</head>
<body>
    <ul>
        <% books.forEach(book=> { %>
            <li>
                <%= book.title %> by <%= book.author %> (Published: <%= book.publicationYear %>)
            </li>
            <% }); %>
    </ul>
    <form action="/addBook" method="POST">
        <!-- Form inputs for adding books -->
    </form>
    <% if (books.length===0) { %>
        <p>No books available.</p>
        <% } %>
</body>
</html>